<%= simple_form_for(@patient) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% @patient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone %>
  </div>
  <div class="field">
    <%= f.label :mobilephone %><br />
    <%= f.text_field :mobilephone %>
  </div>
  <div class="field">
    <%= f.label :photo %><br />
    <%= f.text_field :photo %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br />
    <%= f.date_select :date_of_birth %>
  </div>
  <div class="field">
    <%= f.label :identification_code %><br />
    <%= f.text_field :identification_code %>
  </div>
  <div class="field">
    <%= f.label :education %><br />
    <%= f.text_field :education %>
  </div>
  <div class="field">
    <%= f.label :profession %><br />
    <%= f.text_field :profession %>
  </div>
  <div class="field">
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </div>
  <div class="field">
    <%= f.association :gender, label_method: :description, :prompt => "Please select a gender" %>
  </div>
  <div class="field">
    <%= f.association :clinic, label_method: :name, :prompt => "Please select a clinic" %>
  </div>
  <div class="field">
    <%= f.label 'Civil Status ID' %><br />
    <%= f.text_field :civil_status_id %>
  </div>
  <div class="field">
    <%= f.association :handedness, label_method: :description, :prompt => "Please select a category" %>
  </div>
  <div class="field">
    <%= f.label 'Login ID' %><br />
    <%= f.text_field :login_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
