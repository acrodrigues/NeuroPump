<%= simple_form_for(@secretary) do |f| %>
<% if @secretary.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@secretary.errors.count, "error") %> prohibited this secretary from being saved:</h2>
	<ul>
		<% @secretary.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div>
	<%= f.label :Nome %>
	<%= f.text_field :name, :class => "span12", :onfocus => "alertas()", :placeholder => "Escreva o nome", :required => true%>
</div>
<div>
	<%= f.label :Morada %>
	<%= f.text_field :address, :class => "span12", :onfocus => "alertas()", :placeholder => "Escreva a morada",:required => true %>
</div>
<div class="row-fluid">
	<div class="span6">
		<%= f.label :identification_code, "BI" %>
		<%= f.text_field :identification_code, :class => "span12", :onfocus => "alertas()", :placeholder => "Numero do BI/CC", :maxlength => 10,
      :type => "number",:required => true %>
	</div>
	<div class="span6">
		<%= f.label :Email %>

		<%= f.fields_for :login do |builder|  %>
		<%= builder.text_field :email , :class => "span12", :onfocus => "alertas()", :placeholder => "Escreva o Email",  :type => "email", :required => true%>

	</div>

	<% if @pageType == "edit" %>

	<div class="row-fluid">
		<div class="span6">
			<%= builder.label "Password" %>
			<%= builder.text_field :password , :class => "span12", :onfocus => "alertas()", :placeholder => "Escreva a password",
        :type => "password" %>
		</div>
		<div class="span6">
			<%= builder.label "Password" %>
			<%= builder.text_field :password, :id => "confirm_password", :onfocusout => "checkPasswords()"  , :class => "span12", :onfocus => "alertas()", :placeholder => "Repita a password",
        :type => "password" %>

		</div>
		<%= builder.text_field :type_id , :class => "span12", :onfocus => "alertas()", :type => "hidden", :value => "1"  %>
		<%= f.text_field :login_id , :class => "span12", :onfocus => "alertas()", :type => "hidden"  %>
	</div>

	<script>
		function checkPasswords() {
			// if( document.getElementById('secretary_login_attributes_password').value != document.getElementById('confirm_password').value)
			// alert('okjhgfd');
		}
	</script>

	<% end %>

	<% if @pageType == "new" %>
	<div class="row-fluid">
		<div class="span6">
			<%= builder.label "Password" %>
			<%= builder.text_field :password , :class => "span12", :onfocus => "alertas()", :placeholder => "Escreva a password",
        			:type => "password", :required => true%>
		</div>
		<div class="span6">
			<%= builder.label "Password" %>
			<%= builder.text_field :password, :id => "confirm_password" , :class => "span12", :onfocus => "alertas()", :placeholder => "Repita a password",
        			:type => "password", :required => true%>
		</div>
		<%= builder.text_field :type_id , :class => "span12" ,:onfocus => "alertas()", :type => "hidden", :value => "1"  %>
	</div>
	<% end %>
	<% end %>
</div>
<div class="row-fluid">
	<div class="span6">
		<%= f.label :Telefone %>
		<%= f.text_field :telephone, :class => "span12", :onfocus => "alertas()", :placeholder => "Escreva o telefone" %>
	</div>
	<div class="span6">
		<%= f.label :Telemóvel %>
		<%= f.text_field :mobilephone, :class => "span12", :onfocus => "alertas()", :placeholder => "Escreva o telemóvel" %>
	</div>
</div>
<div class="row-fluid">
	<div class="span6">
		<%= f.association :gender, label_method: :description, :label=>"Sexo", :include_blank => false,  :placeholder => "Selecione o sexo"%>
	</div>
	<div class="span6">
		<label>Data de Nascimento</label>
		<div class="input-append date" id="dpYears" data-date="01-01-1990" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
			<%= f.text_field :date_of_birth, :class => "span11", :value => "01-01-1990", :readonly => true ,:required => true%>
			<span class="add-on"><i class="icon-calendar"></i></span>
		</div>
	</div>
</div>
<div>
	<%= f.label :Fotografia %>
	<%= f.file_field :photo %>
</div>
<br>
<div class="actions">
	<%= f.submit :Submeter , :onclick =>"limpaDados()" ,:class => "btn btn-success span2 pull-right"%>
</div>
<div>
	<%= button_tag "Limpar", :class => "btn btn-warning span2 pull-right", :type => "reset" %>
</div>

<% end %> 