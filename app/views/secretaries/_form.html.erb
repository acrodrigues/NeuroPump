<%= simple_form_for(@secretary) do |f| %>
  <% if @secretary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@secretary.errors.count, "error") %> prohibited this secretary from being saved:</h2>

      <ul>
      <% @secretary.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nome" %>
    <%= f.text_field :name, { :class => "span12", :onfocus => "alertas()", :type => "text", :placeholder => "Escreva o seu nome" } %>
  </div>
  <div class="field">
    <%= f.label "Morada" %>
    <%= f.text_field :address, { :class => "span12", :onfocus => "alertas()", :type => "text", :placeholder => "Escreva a sua morada" } %>
  </div>
  
  <div class="row-fluid">
  	<div class="field span6">
  		<%= f.label "BI" %>
	    <%= f.text_field :identification_code, { :class => "span12", :onfocus => "alertas()", :type => "text", :placeholder => "Escreva o número do seu bi" } %>
  	</div>
  	<div class="field span6">
      <%= f.label "Email" %>
      <%= f.text_field :login_id, { :class => "span12", :onfocus => "alertas()", :type => "text", :placeholder => "Escreva o seu email" } %>
    </div>
  </div>
  
  <div class="row-fluid">
	  <div class="field span6">
	    <%= f.label "Telefone" %>
	    <%= f.text_field :telephone, { :class => "span12", :onfocus => "alertas()", :type => "text", :placeholder => "Escreva o seu número de telefone" } %>
	  </div>
	  <div class="field span6">
	    <%= f.label "Telemóvel" %>
	    <%= f.text_field :mobilephone, { :class => "span12", :onfocus => "alertas()", :type => "text", :placeholder => "Escreva o seu número de telemóvel" } %>
	  </div>
  </div>
  
  
  <div class="row-fluid">
    <div class="field span6">
      <%= f.association :gender, :collection => ["Masculino", "Feminino"], :label => 'Sexo', :prompt => "Selecione o seu sexo" %>
    </div>
    
    <div class="field span6">
      <%= f.label "Data de nascimento" %>
      <div class="input-append date" id="dpYears" data-date="01-01-1990" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
        <input onfocus="alertas()" style="85%" class="span11" size="16" type="text" value="01-01-1990" readonly>
        <span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>
  
  <div class="field">
    <%= f.label "Fotografia" %>
    <%= f.text_field :photo, { :class => "span12", :type => "file"} %>
  </div>
  
  <div class="field">
    <%= f.label "Ativo", {:style => "display: inline"} %>
    <%= f.check_box :active, { :onfocus => "alertas()"} %>
  </div>
  
  
  <div class="actions span12">
    
    <button onclick="limpaDados()" class="btn span2 offset05 pull-right">Limpar</button>
    <%= f.submit "Submeter", { :class => "btn span2 pull-right"} %>
  </div>
<% end %>