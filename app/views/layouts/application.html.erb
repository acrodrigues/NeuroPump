<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">
		<title><%= content_for?(:title) ? yield(:title) : "NeuroPump" %></title>
		<meta name="description" content="">
		<meta name="author" content="NeuroPump">
		<%= stylesheet_link_tag "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<header class="navbar navbar-fixed-top clearfix" style="border-bottom: solid 4px #e6e6e6;">
			<%= render 'layouts/navigation' %>
		</header>
		<div id="main" role="main" style="margin-top: 20px;">
			<div class="container">
				<div class="content">
					<div class="row">
						<div class="span12">
							<%= render 'layouts/messages' %>
							<%= yield %>
						</div>
					</div>

				</div>
			</div>
			<!--! end of .container -->
		</div>
		<!--! end of #main -->
		<footer>
			<div class="pull-right" style="  padding-right: 50px;">Copyright &copy; NeuroPump | Designed by NeuroPump</div>
		</footer>
	</body >
	<!-- Javascripts
	================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->

</html>
