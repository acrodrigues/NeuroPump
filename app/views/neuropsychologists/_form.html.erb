<%= simple_form_for(@neuropsychologist) do |f| %>
<% if @neuropsychologist.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@neuropsychologist.errors.count, "error") %> prohibited this neuropsychologist from being saved:</h2>

	<ul>
		<% @neuropsychologist.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="span12">
	<div class="field">
		<%= f.label :name, "Nome" %>
		<%= f.text_field :name, :class => "span12", :placeholder => "Escreva o nome", :required => true %>
	</div>
	<div class="field">
		<%= f.label :address, "Morada" %>
		<%= f.text_field :address, :class => "span12", :placeholder => "Escreva a morada",:required => true %>
	</div>
	<div class="row-fluid">
		<div class="field span6">
			<%= f.label :identification_code, "BI" %>
			<%= f.text_field :identification_code, :class => "span12", :placeholder => "Numero do BI/CC", :maxlength => 10,
        :type => "number",:required => true %>
		</div>
		<div class="field span6">
			<%= f.label 'login_id', "Email" %>
			<%= f.fields_for :login do |builder|  %>
			<%= builder.text_field :email , :class => "span12", :placeholder => "Escreva o Email", :type => "email", :required => true %>
			
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= builder.label :password, "Password" %>
			<%= builder.text_field :password , :class => "span12", :onfocus => "alertas()", :placeholder => "Escreva a password",
        :type => "password" %>
		</div>
		<div class="span6">
			<%= builder.label "Password" %>
			<%= builder.text_field :password, :id => "confirm_password", :onfocusout => "checkPasswords()"  , :class => "span12", :onfocus => "alertas()", :placeholder => "Repita a password",
        :type => "password" %>

		</div>
		<%= builder.text_field :type_id , :class => "span12", :onfocus => "alertas()", :type => "hidden", :value => "1"  %>
		<% if @pageType == "edit" %>
		<%= f.text_field :login_id , :class => "span12", :onfocus => "alertas()", :type => "hidden"  %>
		<% end %>
		<% end %>
	</div>
	<div class="row-fluid">
		<div class="field span6">
			<%= f.label :telephone, "Telefone" %>
			<%= f.text_field :telephone, :class => "span12", :placeholder => "Escreva o telefone"   %>
		</div>
		<div class="field span6">
			<%= f.label :mobilephone, "Telemóvel" %>
			<%= f.text_field :mobilephone, :class => "span12", :placeholder => "Escreva o telemóvel"  %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="field span6">
			<%= f.association :gender, label_method: :description, :label=>"Sexo", :include_blank => false,  :placeholder => "Selecione o sexo"%>
		</div>
		<div class="field span6">
			<%= f.label ':date_of_birth', "Data de Nascimento" %>
			<div class="input-append date" id="dpYears" data-date="01-01-1990" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
				<%= f.text_field :date_of_birth, :class => "span11", :value => "01-01-1990", :readonly => true ,:required => true%>
				<span class="add-on"><i class="icon-calendar"></i></span>
			</div>
		</div>
	</div>
	<div class="field">
		<%= f.label :photo, "Fotografia" %>
		<%= f.file_field :photo %>
	</div>
	<div class="row-fluid">
	<div class="actions">
		<%= f.submit :Submeter ,:class => "btn btn-success span2 pull-right" , :style => "margin-left: 10px;" %>
		<%= button_tag "Reverter", :class => "btn btn-warning span2 pull-right", :type => "reset" %>
	</div>
	</div>
</div>
<% end %>

