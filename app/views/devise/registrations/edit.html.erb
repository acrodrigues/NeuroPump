<div class="container">
	<div class="row-fluid">
		<div class="span8 offset2">

			<h2>Editar Informação Pessoal</h2>

			<div class="span12">
				<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				<div class="row-fluid">
					<div class="span6">
						<%= f.input :email, :required => true, :class => "span12" %>
					</div>
					<div class="span6">
						<%= f.input :current_password, :required => true, :class => "span12" %>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span6">
						<%= f.input :password_confirmation, :required => true, :class => "span12" %>
					</div>
					<div class="span6">
						<%= f.input :password, :autocomplete => "off", :class => "span12", :required => true %>
					</div>

				</div>
				<div class="span12 ">

					<%= f.button :submit, 'Atualizar', :class => 'btn btn-success pull-right' %>
				</div>

				<% end %>

			</div>

		</div>
	</div>
</div>
